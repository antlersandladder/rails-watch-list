<h1><%= @list.name %></h1>
<%= link_to 'Back to all lists', root_path %>
<%= link_to 'Add a movie', new_list_bookmark_path(@list) %>

<div class="container">
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-4">
        <img style="display:block; width: 100%" src="<%= bookmark.movie.poster_url%>" alt="">
        <%= bookmark.movie.title %>

        <%= link_to 'delete', bookmark_path(bookmark), data: {
        turbo_method: :delete,
        turbo_confirm: 'Confirm to delete bookmark?'
        } %>
      </div>
    <% end %>
  </div>
</div>
